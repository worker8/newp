<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="?pixelForegroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/vh_home_title"
            style="@style/StyleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            tools:text="This is the Title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/vh_home_author"
                style="@style/StyleAuthorSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="authorName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/DOT"
                android:textColor="?textColorNormal" />

            <TextView
                android:id="@+id/vh_home_time"
                style="@style/StyleTitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5 days ago" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/DOT"
                android:textColor="?textColorNormal" />

            <TextView
                android:id="@+id/vh_home_website"
                style="@style/StyleTitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="imgur.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="@string/DOT"
                android:textColor="?textColorNormal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/vh_home_subreddit"
                style="@style/StyleTitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="pics" />
        </LinearLayout>

        <ImageView
            android:id="@+id/vh_home_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@color/material_orange50" />

    </LinearLayout>
</android.support.v7.widget.CardView>